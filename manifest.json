{
	"name": "Sends WMFU to Last.fm",
	"description": "Add WMFU Radio current songs playing and favorites to Last.fm account",
	"version": "1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["storage", "activeTab", "scripting", "tabs"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "/images/get_started16.png",
			"32": "/images/get_started32.png",
			"48": "/images/get_started48.png",
			"128": "/images/get_started128.png"
		}
	},
	"content_scripts": [
		{
			"matches": ["https://*.wfmu.org/playlists/shows/*"],
			"js": ["scrobble.js"]
		},
		{
			"matches": ["https://*.last.fm/api/auth?token*"],
			"js": ["lastFm.js"]
		}
	]
}
